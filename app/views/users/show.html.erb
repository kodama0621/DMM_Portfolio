<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill,50,50, format: 'jpeg', fallback: "no_image1.png" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <p><%= link_to "退会する", user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会してもよろしいですか？" %></p>
  <% end %>
</div>
<table>
  <caption>お気に入り一覧</caption>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.post_image.user.name %></td>
        <td>
          <%= link_to post_image_path(favorite.post_image) do %>
            <%= favorite.post_image.title %>
          <% end %>
        </td>
        <td><%= favorite.post_image.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'post_images/list', post_images: @post_images %>