<main>
  <div class="container">
    <div class="row mt-3">
      <p class="display-1 mx-auto text-center">マイページ</p>
    </div>
    <div class="profile-col w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image1.jpg", size: "100x100", class:"rounded-circle"; %>
      <h5 class="profile-name display-4"><%= @user.name %></h5>
      <h4 class="profile-body"><%= @user.profile_body %></h4>
      <% if @user.id == current_user.id %>
        <div class="mt-auto">
          <p><%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %></p>
          <p><%= link_to "退会", user_path(current_user.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に退会してもよろしいですか？" %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="row mt-3">
      <p class="display-1 mx-auto text-center">投稿履歴</p>
    </div>
    <%= render 'post_images/list', post_images: @post_images %>
  </div>

</main>



