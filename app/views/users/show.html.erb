<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h2>マイページ</h2>

        <%= form_with model: @user, local:true do |f| %>
        <div class="form_group">
          <%= @user.name %>
        </div>
        <div class="form_group">
          <%= attachment_image_tag @user, :profile_image, :fill,100,100, format: 'jpeg', fallback: "no_image1.png" %>
        </div>
          <% if @user.id == current_user.id %>
            <p><%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %></p>
            <p><%= link_to "退会", user_path(current_user.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に退会してもよろしいですか？" %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</main>
<%= render 'post_images/list', post_images: @post_images %>


