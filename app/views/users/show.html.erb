<main>
  <section class="container">
    <h1 class="mx-auto py-5 text-center">マイページ</h1>
    <div class="row mt-3">
      <div class="col-md-6 mx-auto">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <p class="col pl-0">
            <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image1.jpg", size: "200x200" %>
          </p>
          <div class="col p-4 d-flex flex-column">
            <strong class="d-inline-block mb-2 text-info"><i class="fas fa-hand-sparkles"></i><%= @user.name %></strong>
            <h5 class="mb-0"><%= @user.profile_body %></h5>
            <% if @user.id == current_user.id %>
              <div class="mt-auto">
                <span><%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %> | </span>
                <span><%= link_to "退会", user_path(current_user.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に退会してもよろしいですか？" %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container">
    <div class="row mt-3">
      <h1 class="text-center mx-auto py-5">投稿履歴</h1>
    </div>
    <%= render 'post_images/list', post_images: @post_images %>
  </div>

</main>