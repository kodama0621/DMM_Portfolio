<div class="like-index text-center">
  <div class="user-name">
    <%= @user.name %>さんのお気に入り一覧
  </div>
  <% if @favorites.length != 0 %>
    <% @favorites.each do |post_image| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-3">
            <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image1.jpg", size: "100x100", class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-9">
            <p class="card-title">
              <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
                <strong><i class="fas fa-hand-sparkles"></i><span> <%= post_image.title %></span></strong>
              <% end %>
            </p>
            <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>
            <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    お気に入りはまだ登録されていません
  <% end %>
</div>